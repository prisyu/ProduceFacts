<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:layout_marginLeft="10dp"
        tools:layout_marginRight="10dp">

        <Button
            android:id="@+id/maturityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="maturityClicked"
            android:padding="10dp"
            android:background="@android:color/holo_blue_dark"/>

        <Button
            android:id="@+id/temperatureButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="temperatureClicked"
            android:background="@android:color/holo_blue_dark"/>

        <Button
            android:id="@+id/disorderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="disordersClicked"
            android:background="@android:color/holo_blue_dark"/>

    </LinearLayout>
</RelativeLayout>