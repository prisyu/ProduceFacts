<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:text="Languages Menu"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="20dp"
        android:text="PLease Select a Language"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_language_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="languageSelected"
        android:padding="20dp"
        android:text="English"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_language_spanish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="languageSelected"
        android:padding="20dp"
        android:text="Spanish"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_language_french"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="languageSelected"
        android:padding="20dp"
        android:text="French"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/button_language_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="languageCancel"
        android:padding="20dp"
        android:text="Cancel"
        android:textSize="20sp" />

</LinearLayout>