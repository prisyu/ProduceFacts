<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="postharvest.ucdavis.edu.producefacts.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:weightSum="3"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_marginRight="10dp">

            <Button
                android:id="@+id/fruitsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_fruits"
                android:fontFamily="sans-serif"
                android:onClick="produceSelected"
                android:text="Fruit"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                tools:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/vegetablesButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_vegetables"
                android:onClick="produceSelected"
                android:padding="10dp"
                android:text="Vegetables"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                tools:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/ornamentalsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_ornamentals"
                android:fontFamily="sans-serif"
                android:onClick="produceSelected"
                android:paddingBottom="10dp"
                android:text="Ornamentals"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                tools:layout_marginBottom="20dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
