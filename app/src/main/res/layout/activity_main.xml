<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="postharvest.ucdavis.edu.producefacts.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/FruitButton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.23"
                app:srcCompat="@android:color/holo_red_dark" />

            <ImageButton
                android:id="@+id/VegetablesButton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.30"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                app:srcCompat="@android:color/holo_green_light" />

            <ImageButton
                android:id="@+id/OrnamentalsButton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1.62"
                android:adjustViewBounds="false"
                app:srcCompat="@android:color/holo_purple" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
